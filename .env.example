# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database
DATABASE_URL=sqlite:///app/data/accounts.db

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
SECRET_KEY=your_secret_key_here_please_change_this

# Optional: PostgreSQL (if not using SQLite)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/account_deleter

# Rate Limiting
MAX_REQUESTS_PER_HOUR=100
DELAY_BETWEEN_REQUESTS=3

# LLM Budget Control
MAX_COST_PER_DELETION=5.00
DAILY_BUDGET_LIMIT=100.00